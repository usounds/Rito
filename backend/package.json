{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "target": "esnext",
  "scripts": {
    "start": "pnpm exec tsx src/index.ts",
    "dev": "pnpm exec tsx --watch src/index.ts",
    "update": "pnpm up -L && pnpm install",
    "prisma:apply": "pnpm prisma migrate dev --name init",
    "prisma:generate": "pnpm prisma generate",
    "docker:build": "docker build -t rito-backend:latest .",
    "docker:run": "docker run -it --rm --name rito-backend --env-file .env rito-backend:latest",
    "docker:push": "docker buildx build --platform linux/amd64 -t ghcr.io/usounds/rito-backend:latest . --push",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check-missing": "tsx src/scripts/verify_posts_and_likes.ts",
    "backup-missing": "tsx src/scripts/backup_missing_to_csv.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@atcute/bluesky": "^3.2.15",
    "@atcute/client": "^4.2.1",
    "@atcute/lexicons": "^1.2.6",
    "@atcute/tid": "^1.1.1",
    "@atproto/api": "^0.18.18",
    "@atproto/jwk-jose": "^0.1.11",
    "@atproto/oauth-client-node": "^0.3.16",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@skyware/jetstream": "^0.2.5",
    "dotenv": "^17.2.3",
    "openai": "^6.17.0",
    "p-limit": "^7.2.0",
    "p-queue": "^9.1.0",
    "pg": "^8.17.2",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "prisma": "^7.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "undici": ">=6.23.0",
      "hono": ">=4.11.7",
      "lodash": ">=4.17.23"
    },
    "onlyBuiltDependencies": [
      "@atcute/time-ms",
      "@prisma/client",
      "@prisma/engines",
      "core-js",
      "esbuild",
      "prisma"
    ]
  }
}