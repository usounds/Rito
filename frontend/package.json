{
  "name": "rito",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 4600",
    "update": "npx npm-check-updates -u --reject next && npm install",
    "build": "npm run prisma:generate && next build --turbopack",
    "prisma:copy": " cp ../backend/prisma/schema.prisma ./prisma/schema.prisma",
    "prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "start": "next start",
    "lex-gen": "npx lex-cli generate -c ./lex.config.js",
    "update:blocklist": "curl -s https://raw.githubusercontent.com/StevenBlack/hosts/master/alternates/fakenews-gambling-porn-only/hosts | grep -v '^#' | awk '{print $2}' | grep -v '^$' | jq -R -s 'split(\"\\n\") | map(select(. != \"\"))' > src/data/blocklist.json",
    "update:publicsuffix": "curl -s https://publicsuffix.org/list/public_suffix_list.dat | grep -vE '(^//|^$)' | grep -v '^$' | jq -R -s 'split(\"\\n\") | map(select(. != \"\"))' > src/data/publicSuffixList.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@atcute/bluesky": "^3.2.8",
    "@atcute/bluesky-richtext-builder": "^2.0.4",
    "@atcute/client": "^4.0.5",
    "@atcute/lexicons": "^1.2.2",
    "@atcute/tid": "^1.0.3",
    "@atproto/api": "^0.17.5",
    "@atproto/jwk-jose": "^0.1.11",
    "@atproto/oauth-client-node": "^0.3.10",
    "@mantine/core": "^8.3.6",
    "@mantine/form": "^8.3.6",
    "@mantine/hooks": "^8.3.6",
    "@mantine/notifications": "^8.3.6",
    "@prisma/client": "^6.18.0",
    "@tabler/icons-react": "^3.35.0",
    "lucide-react": "^0.548.0",
    "next": "^15.5.9",
    "next-intl": "^4.4.0",
    "nextjs-toploader": "^3.9.17",
    "open-graph-scraper": "^6.10.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "sass": "^1.93.2",
    "tinyld": "^1.3.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@atcute/lex-cli": "^2.3.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.1",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^6.18.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3"
  }
}
