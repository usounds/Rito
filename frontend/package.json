{
  "name": "rito",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 4600",
    "update": "pnpm npm-check-updates -u --reject next && pnpm install",
    "build": "pnpm run prisma:generate && next build --turbopack",
    "prisma:copy": " cp ../backend/prisma/schema.prisma ./prisma/schema.prisma",
    "prisma:generate": "pnpm exec prisma generate --schema=./prisma/schema.prisma",
    "start": "next start",
    "lex-gen": "npx lex-cli generate -c ./lex.config.js",
    "update:blocklist": "curl -s https://raw.githubusercontent.com/StevenBlack/hosts/master/alternates/fakenews-gambling-porn-only/hosts | grep -v '^#' | awk '{print $2}' | grep -v '^$' | jq -R -s 'split(\"\\n\") | map(select(. != \"\"))' > src/data/blocklist.json",
    "update:publicsuffix": "curl -s https://publicsuffix.org/list/public_suffix_list.dat | grep -vE '(^//|^$)' | grep -v '^$' | jq -R -s 'split(\"\\n\") | map(select(. != \"\"))' > src/data/publicSuffixList.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@atcute/atproto": "^3.1.9",
    "@atcute/bluesky": "^3.2.14",
    "@atcute/bluesky-richtext-builder": "^2.0.4",
    "@atcute/client": "^4.1.1",
    "@atcute/lexicons": "^1.2.5",
    "@atcute/tid": "^1.0.3",
    "@atproto/api": "^0.17.7",
    "@atproto/jwk-jose": "^0.1.11",
    "@atproto/oauth-client-node": "^0.3.13",
    "@mantine/core": "^8.3.10",
    "@mantine/form": "^8.3.10",
    "@mantine/hooks": "^8.3.10",
    "@mantine/notifications": "^8.3.10",
    "@prisma/client": "^6.19.1",
    "@tabler/icons-react": "^3.35.0",
    "base64url": "^3.0.1",
    "did-jwt": "^8.0.18",
    "did-resolver": "^4.1.0",
    "lucide-react": "^0.548.0",
    "next": "^16.1.0",
    "next-intl": "^4.6.0",
    "nextjs-toploader": "^3.9.17",
    "open-graph-scraper": "^6.11.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "sass": "^1.96.0",
    "tinyld": "^1.3.4",
    "web-did-resolver": "^2.0.32",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@atcute/lex-cli": "^2.5.2",
    "@next/eslint-plugin-next": "^16.0.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^6.19.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "engines": {
    "pnpm": ">=10.0.0"
  }
}
