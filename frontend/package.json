{
  "name": "rito",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 4600",
    "update": "pnpm dlx npm-check-updates -u && pnpm install",
    "build": "vitest run && pnpm run prisma:generate && next build --webpack",
    "prisma:copy": " cp ../backend/prisma/schema.prisma ./prisma/schema.prisma",
    "prisma:generate": "pnpm exec prisma generate --schema=./prisma/schema.prisma",
    "start": "next start",
    "lex-gen": "npx lex-cli generate -c ./lex.config.js",
    "docker:push": "dotenv -e .env -- sh -c 'docker buildx build --platform linux/amd64 -t ghcr.io/usounds/rito-frontend:latest --build-arg DATABASE_URL=\"$DATABASE_URL\" --build-arg NEXT_PUBLIC_URL=\"https://rito.blue\" . --push' && git push",
    "update:blocklist": "curl -s https://raw.githubusercontent.com/StevenBlack/hosts/master/alternates/fakenews-gambling-porn-only/hosts | grep -v '^#' | awk '{print $2}' | grep -v '^$' | jq -R -s 'split(\"\\n\") | map(select(. != \"\"))' > src/data/blocklist.json",
    "update:publicsuffix": "curl -s https://publicsuffix.org/list/public_suffix_list.dat | grep -vE '(^//|^$)' | grep -v '^$' | jq -R -s 'split(\"\\n\") | map(select(. != \"\"))' > src/data/publicSuffixList.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@atcute/atproto": "^3.1.10",
    "@atcute/bluesky": "^3.2.18",
    "@atcute/bluesky-richtext-builder": "^2.0.5",
    "@atcute/client": "^4.2.1",
    "@atcute/lexicons": "^1.2.9",
    "@atcute/tid": "^1.1.2",
    "@atproto/api": "^0.18.21",
    "@atproto/jwk-jose": "^0.1.11",
    "@atproto/oauth-client-node": "^0.3.16",
    "@mantine/core": "^8.3.15",
    "@mantine/form": "^8.3.15",
    "@mantine/hooks": "^8.3.15",
    "@mantine/notifications": "^8.3.15",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@tabler/icons-react": "^3.36.1",
    "base64url": "^3.0.1",
    "did-jwt": "^8.0.18",
    "did-resolver": "^4.1.0",
    "lucide-react": "^0.574.0",
    "next": "^16.1.6",
    "next-intl": "^4.8.3",
    "nextjs-toploader": "^3.9.17",
    "open-graph-scraper": "^6.11.0",
    "pg": "^8.18.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "sass": "^1.97.3",
    "tinyld": "^1.3.4",
    "web-did-resolver": "^2.0.32",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@atcute/lex-cli": "^2.5.3",
    "@next/eslint-plugin-next": "^16.1.6",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "dotenv-cli": "^11.0.0",
    "eslint": "^10.0.0",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28.1.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^7.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "overrides": {
      "lodash": "4.17.23",
      "hono": ">=4.11.7"
    }
  }
}